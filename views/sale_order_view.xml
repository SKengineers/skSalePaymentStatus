<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_tree_adding_payment_status" model="ir.ui.view">
            <field name="name">view_order_tree_adding_payment_status</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_status']" position="after">
                    <field name="payment_provider_id"/>
                    <field name="payment_status"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_form_adding_payment_status" model="ir.ui.view">
            <field name="name">view_order_form_adding_payment_status</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_invoice']" position="after">
                    <button name="action_view_transaction" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="count_transaction == 0">
                        <field name="count_transaction" widget="statinfo" string="Transaction"/>
                    </button>
                </xpath>
                <xpath expr="//group[@name='sale_reporting']" position="after">
                    <group string="Payment Details" name="payment_details">
                        <field name="payment_provider_id" readonly="1"/>
                        <field name="payment_transaction_id" readonly="1"/>
                        <field name="payment_status" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>